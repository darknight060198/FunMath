<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_sign_in"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profil_select_photo"
                android:scaleType="fitCenter"/>

            <com.ancovy.funmath.other.SimplificaFontTextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:id="@+id/my_username_result_clasic"/>

        </LinearLayout>

        <com.ancovy.funmath.other.PiratePlunderFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VS"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitCenter"/>

            <com.ancovy.funmath.other.SimplificaFontTextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:text="username"/>

        </LinearLayout>
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:id="@+id/space_result_klasik"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/space_result_klasik"
        android:layout_centerHorizontal="true"
        android:id="@+id/strip_result_klasik"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="50sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_toLeftOf="@id/strip_result_klasik"
        android:layout_marginRight="40dp"
        android:layout_alignTop="@id/strip_result_klasik"
        android:textSize="50sp"
        android:id="@+id/score_result_klasik"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/strip_result_klasik"
        android:layout_marginLeft="40dp"
        android:layout_alignTop="@id/strip_result_klasik"
        android:textSize="50sp"
        android:text="50"
        android:id="@+id/score_opponent_result_klasik"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Ok"
        android:background="@drawable/background_button_sign_in"
        android:layout_marginBottom="60dp"
        android:id="@+id/ok_button_result_klasik"/>

    <com.ancovy.funmath.other.LemonMilkFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:text="YOU LOSE!"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>