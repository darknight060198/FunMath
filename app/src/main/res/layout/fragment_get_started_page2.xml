<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/image_get_started_outline"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/black_dot"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/image_get_started_outline"/>

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/space_get_started2"
        android:layout_centerInParent="true"/>

    <com.ancovy.funmath.other.SimplificaFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/get_started_page2_text"
        android:text="TEXT SAMPLE 2"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_below="@id/space_get_started2"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/space_get_started2"
        android:layout_marginBottom="20dp"
        android:background="@drawable/image_get_started_page2"
        android:id="@+id/get_started_page1_image"/>

    <com.ancovy.funmath.other.SimplificaFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text contain bla bla bla"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@id/get_started_page2_text"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

