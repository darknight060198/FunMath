<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_sign_in">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_sign_in">

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:id="@+id/score_leaderboard"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:id="@+id/icon_peringkat_leaderboard"
            android:layout_toLeftOf="@id/score_leaderboard"
            android:tint="@color/white"/>

        <TextView
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:id="@+id/peringkat_leaderboard"
            android:textSize="20sp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/username_leaderboard"
            android:textSize="20sp"
            android:layout_toLeftOf="@id/icon_peringkat_leaderboard"
            android:layout_toRightOf="@id/peringkat_leaderboard"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>