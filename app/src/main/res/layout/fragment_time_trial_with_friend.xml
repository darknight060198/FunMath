<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_sign_in">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batal"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:id="@+id/cancel_button_with_friend_time_trial"
        android:background="@drawable/background_button_sign_in"/>

    <com.ancovy.funmath.other.HorizontalDottedProgress
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/cancel_button_with_friend_time_trial"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menunggu teman : "
        android:textColor="@color/white"
        android:layout_marginTop="75dp"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_view_waktu_pencarian_with_friend_time_trial"/>

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@id/text_view_waktu_pencarian_with_friend_time_trial"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/chronometer_with_friend_time_trial"/>

</RelativeLayout>