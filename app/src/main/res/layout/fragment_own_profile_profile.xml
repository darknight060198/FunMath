<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_sign_in"
    android:paddingEnd="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingStart="15dp"
    android:paddingTop="15dp">

    <com.ancovy.funmath.other.SimplificaFontEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_text_profile"
        android:inputType="none"
        android:backgroundTint="#00000000"
        android:text="Email : "
        android:textSize="30sp"
        android:textColor="@color/white"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <com.ancovy.funmath.other.SimplificaFontEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_edit_profile"
        android:layout_toRightOf="@id/email_text_profile"
        android:inputType="none"
        android:backgroundTint="#00000000"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <com.ancovy.funmath.other.SimplificaFontEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username_text_profile"
        android:inputType="none"
        android:backgroundTint="#00000000"
        android:text="Username : "
        android:textSize="30sp"
        android:textColor="@color/white"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@id/email_edit_profile"/>

    <com.ancovy.funmath.other.SimplificaFontEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username_edit_profile"
        android:layout_toRightOf="@id/username_text_profile"
        android:layout_below="@id/email_edit_profile"
        android:inputType="none"
        android:backgroundTint="#00000000"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <com.ancovy.funmath.other.SimplificaFontEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fullname_text_profile"
        android:inputType="none"
        android:backgroundTint="#00000000"
        android:text="Nama Lengkap : "
        android:textSize="30sp"
        android:textColor="@color/white"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@id/username_text_profile"/>

    <com.ancovy.funmath.other.SimplificaFontEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fullname_edit_profile"
        android:layout_toRightOf="@id/fullname_text_profile"
        android:layout_below="@id/username_edit_profile"
        android:inputType="none"
        android:backgroundTint="#00000000"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <com.ancovy.funmath.other.SimplificaFontEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jenis_akun_text_profile"
        android:inputType="none"
        android:backgroundTint="#00000000"
        android:text="Jenis Akun : "
        android:textSize="30sp"
        android:textColor="@color/white"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@id/fullname_text_profile"/>

    <com.ancovy.funmath.other.SimplificaFontEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jenis_akun_edit_profile"
        android:layout_toRightOf="@id/jenis_akun_text_profile"
        android:layout_below="@id/fullname_edit_profile"
        android:inputType="none"
        android:backgroundTint="#00000000"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <com.ancovy.funmath.other.SimplificaFontEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/school_text_profile"
        android:inputType="none"
        android:backgroundTint="#00000000"
        android:text="Jenjang Sekolah : "
        android:textSize="30sp"
        android:textColor="@color/white"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@id/jenis_akun_text_profile"/>

    <com.ancovy.funmath.other.SimplificaFontEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/school_edit_profile"
        android:layout_toRightOf="@id/school_text_profile"
        android:layout_below="@id/jenis_akun_edit_profile"
        android:inputType="none"
        android:backgroundTint="#00000000"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <com.ancovy.funmath.other.SimplificaFontEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grade_text_profile"
        android:inputType="none"
        android:backgroundTint="#00000000"
        android:text="Kelas : "
        android:textSize="30sp"
        android:textColor="@color/white"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@id/school_text_profile"/>

    <com.ancovy.funmath.other.SimplificaFontEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grade_edit_profile"
        android:layout_toRightOf="@id/grade_text_profile"
        android:layout_below="@id/school_edit_profile"
        android:inputType="none"
        android:backgroundTint="#00000000"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:id="@+id/ok_button_edit_profile"/>

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_mode_edit_black_24dp"
        android:scaleType="fitXY"
        android:id="@+id/edit_button_profile"/>
</RelativeLayout>